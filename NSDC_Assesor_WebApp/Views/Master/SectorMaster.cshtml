
@{
    ViewBag.Title = "Sector Master";
}
<script src="~/Scripts/Master/SectorMasterController.js"></script>

<div ng-app="app" ng-controller="SectorMasterController">

    <div ng-show="!Isshown">
        <h2 class="page-header"><span>Sector Master</span></h2>
        <form>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-4"></div>
                    <div class="col-md-4">
                        <label for="SectorName">Sector Name</label>
                        <div class="">
                            <input type="text" ng-disabled="isViewMode" only-Letters-Input maxlength="100" id="SectorName" class="form-control" ng-model="Agency.name" placeholder="Sector Name" required="required" autofocus="autofocus">

                        </div>
                    </div>
                    </div>
                </div>

            <div class="form-group text-center">
                <button class="btn btn-primary" ng-hide="isViewMode" ng-click="SaveDetails()">Save</button>
                <button class="btn btn-danger" ng-click="Close()">Clear</button>
                <button class="btn btn-primary" ng-click="Upload()">Upload File</button>
            </div>
        </form>
    </div>
    <div ng-show="Isshown">
        <h2 class="page-header"><span>Upload Sector </span></h2>
        <div class="form-group">
            <div class="form-row">
                <div class="col-md-4">
                    <div class="group">
                        <label>Select File</label>
                        <div class="clearfix"></div>
                        <input type="file" id="fileUpload" name="file" class="inputMaterial" />
                        <span class="highlight"></span>
                        <span class="bar"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group text-center">
            <input type="button" class="btn btn-primary" ng-click="HideDiv()" value="Back" />
            <button class="btn btn-primary" ng-hide="isViewMode" ng-click="UploadFile()">Upload</button>
            <button class="btn btn-primary" ng-click="Closed()">Clear</button>
            <input type="button" class="btn btn-primary" ng-click="DownloadFile('/DMS/Download/Master/Document_Sample_Sector.csv')" value="Download File Formate" />
        </div>
    </div>
    <!-- DataTables Example -->
    <div class="card mb-3">
        @*<div class="card-header">
                <i class="fas fa-table"></i>
                Data Table Example
            </div>*@
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" datatable="ng" id="dataTable1" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th style="width:10%">Status</th>
                            <th style="width:10%">Action</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Name</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        <tr class="ng-cloak" ng-repeat="u in agencylist">
                            <td>{{u.Name}}</td>
                            @*<td>{{u.NumberofAssessor}}</td>*@

                            <td>
                                <div ng-if="u.Status">
                                    <a href='#' ng-click="OperactionAgency(u.ID,'Inactive')" title="Click to Inactive">
                                        <i class="fa fa-unlock-alt green" aria-hidden="true"> Active </i>
                                    </a>
                                </div>
                                <div ng-if="!u.Status">
                                    <a href='#' ng-click="OperactionAgency(u.ID,'Active')" title="Click to Active"><i class="fa fa-lock red" aria-hidden="true"> Inactive</i></a>
                                </div>
                            </td>
                            <td>
                                <a href='#' title="View" ng-click="Edit(u,'')" class="actn"><i class="fa fa-eye" aria-hidden="true"></i></a>
                                <a href='#' title="Edit" ng-click="Edit(u,'Edit')" class="actn"><i class='fas fa-pencil-alt' aria-hidden='true'></i></a>

                                @*<a href='javascript:void(0);' ng-click="OperactionAgency(u.ID,'Delete')" title="Click to Delete" class="actn actn-del"><i class='fa fa-trash' aria-hidden='true'></i></a>*@

                            </td>
                        </tr>
                    </tbody>
                </table>

            </div>
        </div>

    </div>
</div>



