
@{
    ViewBag.Title = "Update Assessment";
}

<script src="~/Scripts/AgencyManagement/UpdateEndStatusController.js"></script>
<h2 class="page-header"><span>Update End Status</span></h2>
<div ng-app="app" ng-controller="UpdateEndStatusController">

    <div>
        <form>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-2"></div>
                    <div class="col-md-4">
                        <label for="BatchName">Batch Name</label>
                        <div class="">
                            <input type="text" ng-disabled="isViewMode || isViewMode1" id="BatchName" class="form-control" ng-model="Agency.BatchName" placeholder="Batch Name" autofocus="autofocus">

                        </div>
                    </div>
                    <div class="col-md-4">
                        <label for="EndAssessmentStatus">End Assessment Status</label>
                        <div class="">
                            <input type="text" ng-disabled="isViewMode" id="EndAssessmentStatus" class="form-control" ng-model="Agency.EndAssessmentStatus" autofocus="autofocus">

                        </div>
                    </div>  
                    
                </div>
                </div>          

            <div class="form-group text-center">
                <button class="btn btn-primary" ng-hide="isViewMode" ng-click="SaveDetails()">Save</button>
                <button class="btn btn-danger" ng-click="Close()">Clear</button>
            </div>
        </form>
    </div>
    <!-- DataTables Example -->
    <div class="card mb-3">        
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" datatable="ng" id="dataTable1" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Assessment Date</th>
                            <th>Batch Name</th>
                            <th>End Assessment Status</th>                       
                            <th style="width:10%">Action</th>
                        </tr>
                    </thead>                  
                    <tbody>
                        <tr class="ng-cloak" ng-repeat="u in updateEndStatuslist">
                            <td>{{u.PreferedAssessmentDate}}</td>
                            <td>{{u.BatchName}}</td>
                            <td>{{u.EndAssessmentStatus}}</td>                          
                            <td>
                                @*<a href='#' title="View" ng-click="Edit(u,'')" class="actn"><i class="fa fa-eye" aria-hidden="true"></i></a>*@
                                <a href='#' title="Edit" ng-click="Edit(u,'Edit')" class="actn"><i class='fas fa-pencil-alt' aria-hidden='true'></i></a>

                            </td>
                        </tr>
                    </tbody>
                </table>

            </div>
        </div>

    </div>
</div>

