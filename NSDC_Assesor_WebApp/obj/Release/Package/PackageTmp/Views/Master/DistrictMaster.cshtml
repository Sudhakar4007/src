
@{
    ViewBag.Title = "District Master";
}
<script src="~/Scripts/Master/DistrictMasterController.js"></script>
<h2 class="page-header"><span>District Master</span></h2>
<div ng-app="app" ng-controller="DistrictMasterController">

    <div>
        <form>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-2"></div>
                    <div class="col-md-4">
                        <label for="StateId">State Name</label>
                        <div class="">
                            <select id="StateId" class="form-control" ng-model="Agency.StateId" required="required" ng-options="value.ID as value.Name for (key, value) in StateList">
                                <option value="">--Select --</option>
                            </select>

                        </div>
                    </div>
                    <div class="col-md-4">
                        <label for="DistrictName">District Name</label>
                        <div class="">
                            <input type="text" ng-disabled="isViewMode" id="DistrictName" only-Letters-Input maxlength="100" class="form-control" ng-model="Agency.name" placeholder="District Name" required="required" autofocus="autofocus">

                        </div>
                    </div>
                </div>
                </div>
            @*<div class="form-group">
                <div class="form-row">
                    
                </div>
            </div>*@

            <div class="form-group text-center">
                <button class="btn btn-primary" ng-hide="isViewMode" ng-click="SaveDetails()">Save</button>
                <button class="btn btn-danger" ng-click="Close()">Clear</button>
            </div>
        </form>
    </div>
    <!-- DataTables Example -->
    <div class="card mb-3">
        @*<div class="card-header">
                <i class="fas fa-table"></i>
                Data Table Example
            </div>*@
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" datatable="ng" id="dataTable1" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>State Name</th>
                            <th>District Name</th>
                            <th style="width:10%">Status</th>
                            <th style="width:10%">Action</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>State Name</th>
                            <th>District Name</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        <tr class="ng-cloak" ng-repeat="u in agencylist">
                            <td>{{u.StateName}}</td>
                            <td>{{u.Name}}</td>
                            <td>
                                <div ng-if="u.Status">
                                    <a href='#' ng-click="OperactionAgency(u.ID,'Inactive')" title="Click to Inactive">
                                        <i class="fa fa-unlock-alt green" aria-hidden="true"> Active </i>
                                    </a>
                                </div>
                                <div ng-if="!u.Status">
                                    <a href='#' ng-click="OperactionAgency(u.ID,'Active')" title="Click to Active"><i class="fa fa-lock red" aria-hidden="true"> Inactive</i></a>
                                </div>
                            </td>
                            <td>
                                <a href='#' title="View" ng-click="Edit(u,'')" class="actn"><i class="fa fa-eye" aria-hidden="true"></i></a>
                                <a href='#' title="Edit" ng-click="Edit(u,'Edit')" class="actn"><i class='fas fa-pencil-alt' aria-hidden='true'></i></a>

                                @*<a href='javascript:void(0);' ng-click="OperactionAgency(u.ID,'Delete')" title="Click to Delete" class="actn actn-del"><i class='fa fa-trash' aria-hidden='true'></i></a>*@

                            </td>
                        </tr>
                    </tbody>
                </table>

            </div>
        </div>

    </div>
</div>

