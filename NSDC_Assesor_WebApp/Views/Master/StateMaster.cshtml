
@{
    ViewBag.Title = "State Master";
}


<script src="~/Scripts/Master/StateMasterController.js"></script>

<h2 class="page-header"><span>State Master</span></h2>
<div ng-app="app" ng-controller="StateMasterController">

    <div>
        <form>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-4"></div>
                    <div class="col-md-4">
                        <label for="StateName">State Name</label>
                        <div class="">
                            <input type="text" ng-disabled="isViewMode" id="StateName" only-Letters-Input maxlength="100" class="form-control" ng-model="Agency.name" placeholder="State Name" required="required" autofocus="autofocus">

                        </div>
                    </div>
                    </div>
                </div>

            <div class="form-group text-center">
                <button class="btn btn-primary" ng-hide="isViewMode" ng-click="SaveDetails()">Save</button>
                <button class="btn btn-danger" ng-click="Close()">Clear</button>
                @*<button class="btn btn-link" ng-click="exportToExcel('#StatedataTable1')">
                    <span class="glyphicon glyphicon-share"></span>
                    Export to Excel
                </button>*@
            </div>
        </form>
    </div>
    <!-- DataTables Example -->
    <div class="card mb-3">
        @*<div class="card-header">
                <i class="fas fa-table"></i>
                Data Table Example
            </div>*@
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" datatable="ng" id="StatedataTable1" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th style="width:10%">Status</th>
                            <th style="width:10%">Action</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Name</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        <tr class="ng-cloak" ng-repeat="u in agencylist">
                            <td>{{u.Name}}</td>
                            <td>
                                @*<div ng-if="u.Status">
                                    <a href="javascript:void(0)" ng-click="OperactionAgency(u.ID,'Inactive')" title="Click to Inactive">
                                        <i class="fa fa-unlock-alt green" aria-hidden="true"> Active </i>
                                    </a>
                                </div>
                                <div ng-if="!u.Status">
                                    <a href="javascript:void(0)" ng-click="OperactionAgency(u.ID,'Active')" title="Click to Active"><i class="fa fa-lock red" aria-hidden="true"> Inactive</i></a>
                                </div>*@
                                <div ng-if="u.Status">
                                    <a href='#' ng-click="OperactionAgency(u.ID,'Inactive')" title="Click to Inactive">
                                        <i class="fa fa-unlock-alt green" aria-hidden="true"> Active </i>
                                    </a>
                                </div>
                                <div ng-if="!u.Status">
                                    <a href='#' ng-click="OperactionAgency(u.ID,'Active')" title="Click to Active"><i class="fa fa-lock red" aria-hidden="true"> Inactive</i></a>
                                </div>
                            </td>
                            <td>
                                <a href='#' title="View" ng-click="Edit(u,'')" class="actn"><i class="fa fa-eye" aria-hidden="true"></i></a>
                                <a href='#' title="Edit" ng-click="Edit(u,'Edit')" class="actn"><i class='fas fa-pencil-alt' aria-hidden='true'></i></a>

                                @*<a href='javascript:void(0);' ng-click="OperactionAgency(u.ID,'Delete')" title="Click to Delete" class="actn actn-del"><i class='fa fa-trash' aria-hidden='true'></i></a>*@

                            </td>
                        </tr>
                    </tbody>
                </table>

            </div>
        </div>

    </div>
</div>
