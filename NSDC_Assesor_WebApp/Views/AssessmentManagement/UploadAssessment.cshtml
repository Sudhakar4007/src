
@{
    ViewBag.Title = "Upload Assessment";
}
<script src="~/Scripts/AssessmentManagement/UploadAssessment.js"></script>

<div id="main" ng-controller="UploadAssessmentController">
    <h2 class="page-header"><span>Upload Assessment</span></h2>

    <div>
        <form>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-4">
                        <div class="group">
                            <label>Select File</label>
                            <div class="clearfix"></div>
                            <input type="file" id="fileUpload" name="file" class="inputMaterial" />
                            <span class="highlight"></span>
                            <span class="bar"></span>

                        </div>

                       
                    </div>
                    
                </div>
            </div>




            <div class="form-group text-center">
                <button class="btn btn-primary" ng-hide="isViewMode" ng-click="UploadFile()">Upload</button>
                <button class="btn btn-primary" ng-click="Close()">Clear</button>
                <input type="button" class="btn btn-primary" ng-click="DownloadFile('/DMS/Download/Assessment/Document_Sample_Assessment.xlsx')" value="Download File Formate" />

            </div>
        </form>
    </div>

    <!-- DataTables Example -->
    <div class="card mb-3">
       
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" datatable="ng" id="dataTable1" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>File Name </th>
                           
                            <th>Date</th>
                            <th>Message</th>
                            <th>Action</th>
                            <th>View Error</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="ng-cloak" ng-repeat="item in  lstFileUploadHistory">
                            <td>{{item.FileName}}</td>
                            <td>{{item.Date.slice(6, -2)  | date : "MM/dd/yyyy"}}</td>
                            <td>{{item.Message}}</td>
                            <td>
                                <input type="button" class="dsh-btns-green" ng-click="DownloadFile('/Home/documentDownload?filePath='+item.FilePath)" value="Download" />
                            </td>
                            <td>
                                <div ng-if="item.IsError">
                                    <a href='#' title="View" ng-click="GetUploadFileError(item.FilePath,2)" class="actn"><i class="fa fa-eye" aria-hidden="true"></i></a>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>

            </div>
        </div>

    </div>


</div>





    

